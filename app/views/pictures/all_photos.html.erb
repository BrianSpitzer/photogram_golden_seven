<h1>All Photos</h1>

<a href="/photos/new">
  Add a new photo
</a>

  
<%= @list_of_photos.each do |the_pic| %>
  <div class="thumbnail">
    <img src="<%= the_pic.source %>">
    <div class="caption">
      <a href="/photos/<%= the_pic.id %>" class="btn btn-default btn-block">
        Show Details
      </a>

      <a href="/photos/<%= the_pic.id %>/edit" class="btn btn-default btn-block">
        Edit
      </a>

      <a href="/delete_photo/<%= the_pic.id %>" class="btn btn-default btn-block">
        Delete
      </a>
    </div>
  </div>
<%=end %>